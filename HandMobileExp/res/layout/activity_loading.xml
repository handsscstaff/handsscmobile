<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
     >

    <Button
        android:id="@+id/activity_loading_reload_button"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_default_holo_light"
        android:text="reload"
        android:visibility="invisible" /> <!--  -->

    <TextView
        android:id="@+id/activity_loading_infomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_loading_reload_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="36dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/activity_loading_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="alert"
        android:src="@drawable/loading_alert"
        android:visibility="invisible" />

</RelativeLayout>